@model List<OtelProject.Models.Tables.Otel>
@*@model OtelProject.Models.OtelCountry*@
@{
    ViewBag.Title = "Otel Listesi";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}


<span class="display-3">Oteller</span>
<hr />
<table id="table" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Otel ID</th>
            <th>Otel Adı</th>
            <th>Otel Lokasyonu</th>
            <th>Otel Fiyatı</th>
            <th>Otel Açıklaması</th>
            <th>Otel Yıldızı</th>
            <th>Otel Puanı</th>
            <th>Otel Şehri</th>
            <th>Otel Fotoğrafı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <!-- Modal -->

            <tr>
                <td>@item.OtelsId</td>
                <td>@item.OtelName</td>
                <td>@item.OtelLocation</td>
                <td>@item.OtelPrice</td>
                <td>@item.OtelDescription.Substring(0,5)...</td>
                <td>@item.OtelStars</td>
                <td>@item.OtelRating</td>
                <td>@item.OtelCountry</td>
                <td><img src="@item.OtelPicture" width="70"/></td>
                <td>
                    @Html.ActionLink("Düzenle", "OtelEdit", new { id = item.OtelsId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Sil", "OtelDelete", new { id = item.OtelsId }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinizden eminmisiniz?')" })


                </td>
            </tr>

        }
    </tbody>
</table>

@section scripts{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.11.3/datatables.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#table').DataTable();
        });
    </script>
}

