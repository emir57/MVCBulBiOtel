    </div>
</div>
<span id="upper"></span>

<div class="mainContainer">
    <div class="row">
        <div class="col-md-4" style="max-height: 530px;">
            <div id="searchDiv">
                <div class="searchTitle">
                    <h5 class="display-5">Arama İşlemleri</h5> <h4>Toplamda <span class="count">@ViewBag.count</span> Otel</h4>
                </div>
                <hr class="width-90" />
                <div class="alert alert-danger" role="alert">
                    A simple danger alert—check it out!
                </div>
                <div class="countryDiv border">
                    <label class="form-label" for="countries">Şehir Seçiniz</label>
                    <hr class="cizgi" />

                    <select id="countries" name="countries" class="form-select form-select-lg" aria-label="Default select example">
                        <option value="0" selected>...</option>
                        @foreach (var itemC in Model.c)
                        {
                            <option value="@itemC.CountryId">@itemC.CountryName</option>
                        }
                    </select>
                </div>
                <div class="searchString border">
                    <label class="form-label" for="searchString">Arama</label>
                    <hr class="cizgi" />
                    @Html.TextBox("searchString", "", new { @class = "form-control", @id = "searchString" })
                </div>
                <div class="priceRange border">
                    <label class="" for="">Fiyat Aralığı Giriniz</label><br />
                    <hr class="cizgi" />
                    <div class="priceAlt">
                        <label class="" for="pricemin">Minimum Fiyat</label>
                        @Html.TextBox("pricemin", "", new { @class = "form-control", @Style = "width:80px;", @id = "pricemin" })
                    </div>
                    <div class="verticalHover pricePosition"></div>
                    <div class="priceAlt">
                        <label class="" for="pricemax">Maximum Fiyat</label>
                        @Html.TextBox("pricemax", "", new { @class = "form-control", @Style = "width:80px;", @id = "pricemax" })
                    </div>
                    <div align="center" class="m-2">
                        <button id="GetOtelsByPriceBtn" class="btn btn-primary">Uygula</button>
                    </div>
                </div>
                <div class="middle">
                    @*<button id="" type="submit" class="btn btn-primary ">Ara</button>*@
                </div>

                <div align="center" style="" class="">
                    <button id="getAllOtelsBtn" class="btn btn-primary">Tüm Otelleri Göster</button>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div id="otels" style="overflow: auto; max-height: 530px;">

            </div>
        </div>
    </div>
    
</div>

    <a class="upperBTN" href="#upper"><i class="fas fa-chevron-circle-up fa-4x"></i></a>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    
    $(document).ready(function () {
        var listBox = $("#countries");
        GetAllOtels();

        $("#getAllOtelsBtn").click(function () {
            GetAllOtels();
        })
        
        $("#GetOtelsByPriceBtn").click(function () {
            GetOtelsByPrice($("#pricemin").val(), $("#pricemax").val());
        })
        $("#searchString").keyup(function () {
            if ($("#searchString").val() == "") {
                GetAllOtels();
            }
            else {
                if ($("#searchString").val().length >= 1) {
                    setTimeout(function () {
                        GetOtelsByName($("#searchString").val());
                    }, 400)
                    //GetOtelsByName($("#searchString").val());
                }
            }
        })
        listBox.change(function ()
        {
            if (listBox.val() == 0) {
                GetAllOtels();

            }
            else {
                GetOtelsByCountry(listBox.val());
            }
        })

        function GetAllOtels() {
            $.ajax({
                url: "/Home/GetOtels",
                type: "GET",
                contentType: "application/html;charset=utf-8",
                data: "html",
                success: function (data) {
                    $("#otels").empty().append(data);
                }
            })
        }
        function GetOtelsByCountry(id) {
            $.ajax({
                url: "/Home/GetOtelsByCountry",
                type: "GET",
                contentType: "json",
                data: {countryid:id},
                success: function (data) {
                    $("#otels").empty().append(data);
                }
            })
        }
        function GetOtelsByName(searchString) {
            $.ajax({
                url: "/Home/GetOtelsByName",
                type: "GET",
                contentType: "json",
                data: { searchKey: searchString },
                success: function (data) {
                    $("#otels").empty().append(data);
                }
            })
        }
        function GetOtelsByPrice(min,max) {
            $.ajax({
                url: "/Home/GetOtelsByPrice",
                type: "GET",
                contentType: "json",
                data: { minprice: min,maxprice:max },
                success: function (data) {
                    $("#otels").empty().append(data);
                }
            })
        }
        
    })

